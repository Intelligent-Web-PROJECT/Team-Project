<%- include("../components/header") %>
<%- include("../components/navbar") %>
<script src="/javascripts/index.js"></script>
<script src="/javascripts/indexDb.js"></script>

<div class="container mt-5">
    <h1 class="text-muted mb-3">My Plants</h1>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
            <label for="filter" class="form-label mb-0 me-2">Filter:</label>
            <select class="form-select" id="filter">
                <option selected value="0">All plants</option>
                <option value="1">Distance (farthest)</option>
                <option value="2">Distance (nearest)</option>
                <option value="3">Has Flowers</option>
                <option value="4">No Flowers</option>
            </select>
        </div>
        <a href="/list-plant" class="btn btn-success">Add Plant</a>
    </div>
    <div class="list-group" id="plant-list">
        <% plants.forEach(function(plant) { %>
            <div class="list-group-item list-plants custom-item d-flex justify-content-between align-items-center mb-3 border-1 rounded-3 shadow"
                 data-distance="<%= plant.distance %>" data-flowers="<%= plant.characteristics.have_flowers %>">
                <div class="d-flex align-items-center">
                    <% if (plant.photos.length > 0) { %>
                        <img src="data:<%= plant.photos[0]?.img_type %>;base64,<%= Buffer.from(plant.photos[0]?.img_data ?? "").toString('base64') %>"
                             class="card-img-top me-3 custom-img"
                             alt="<%= plant.name %>">
                    <% } %>
                    <div>
                        <h5 class="mb-1"><%= plant.name %></h5>
                        <small class="fw-medium fs-6">The plant has flowers: <span class="fw-normal"><%= plant.characteristics.have_flowers ? "Yes" : "No" %></span></small><br>
                        <small class="fw-medium fs-6">Distance from you: <span class="fw-normal"><%= parseFloat(plant.distance).toFixed(2) %> km</span></small><br>
                        <small class="fw-medium fs-6">Added: <span class="fw-normal"><%= plant.createdAt.toDateString() %></span></small>
                    </div>
                </div>
                <a class="btn btn-primary" href="/plants/<%= plant._id %>">View</a>
            </div>
        <% }); %>
    </div>
</div>

<script src="/javascripts/filter.js"></script>



